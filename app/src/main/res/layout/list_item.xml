<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <!-- Name Label -->

    <TextView
        android:id="@+id/serviceno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:text="136"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
         />

    <TextView
        android:id="@+id/refresh_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just Now"
        android:layout_below="@id/serviceno"
        android:textColor="#5d5d5d"
        android:textSize="10sp"
        />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/next_bus_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/serviceno"
        android:paddingTop="6dip"
        android:paddingLeft="6dip">
        <TextView
            android:id="@+id/next_eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 mins"
            android:textSize="20sp"
            android:textColor="#5d5d5d"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/next_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/next_eta"
            android:layout_gravity="bottom"
            android:text="Seats Available"
            android:textColor="#acacac" />
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sub_bus_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/next_bus_layout"
        android:paddingTop="6dip"
        android:paddingLeft="6dip">
        <TextView
            android:id="@+id/sub_eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 mins"
            android:textSize="20sp"
            android:textColor="#5d5d5d"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_eta"
            android:paddingBottom="2dip"
            android:text="Seats Available"
            android:textColor="#acacac" />
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sub3_bus_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sub_bus_layout"
        android:paddingTop="6dip"
        android:paddingLeft="6dip">
        <TextView
            android:id="@+id/sub3_eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 mins"
            android:textSize="20sp"
            android:textColor="#5d5d5d"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub3_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub3_eta"
            android:paddingBottom="2dip"
            android:text="Seats Available"
            android:textColor="#acacac" />
    </RelativeLayout>
</RelativeLayout>